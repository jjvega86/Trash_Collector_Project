@model IEnumerable<Trash_Collector.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1 class="text-primary">Today's Route</h1>
    <br />
    <form asp-action="Filter" method="get">
        <button type="submit" class="btn btn-outline-info">View All Clients</button>
    </form>
    <br />
    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentBalance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PickUpDay.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExtraPickUpDay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SuspendStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SuspendEndDate)
                </th>
                <th>
                    Confirm Pick Up
                </th>
                <th>
                    View Location Information
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentBalance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PickUpDay.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExtraPickUpDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SuspendStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SuspendEndDate)
                    </td>
                    <td>
                        <form asp-action="Confirm" asp-route-id="@item.Id" method="get">
                            <button type="submit" class="btn btn-outline-danger">Confirm Pickup</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Map" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-outline-success">View Location Information</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
